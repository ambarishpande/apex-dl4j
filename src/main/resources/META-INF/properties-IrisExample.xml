<?xml version="1.0"?>
<configuration>
  <!-- 
  <property>
    <name>dt.application.{appName}.operator.{opName}.prop.{propName}</name>
    <value>some-default-value (if value is not specified, it is required from the user or custom config when launching)</value>
  </property>
  -->
  <!-- memory assigned to app master
  <property>
    <name>dt.attr.MASTER_MEMORY_MB</name>
    <value>1024</value>
  </property>
  -->

  <property>
    <name>dt.application.*.attr.CONTAINER_JVM_OPTIONS</name>
    <value>-Xmx2g -XX:+UseG1GC </value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.*.attr.MEMORY_MB</name>
    <value>512</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.*.port.*.attr.BUFFER_MEMORY_MB</name>
    <value>128</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.Worker.prop.batchSize</name>
    <value>16</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.inputData.prop.numEpochs</name>
    <value>2000</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.Master.prop.saveLocation</name>
    <value>/user/ambarish/iris/</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.Master.prop.filename</name>
    <value>iris.zip</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.ParameterAverager.prop.numWorkers</name>
    <value>2</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.Master.prop.numOfClasses</name>
    <value>3</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.inputData.prop.tuplesPerWindow</name>
    <value>100</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.inputData.prop.sendBatchSize</name>
    <value>1</value>
  </property>

  <property>
    <name>dt.application.IrisExample.operator.*.port.*.attr.STREAM_CODEC</name>
    <value>com.github.ambarishpande.MasterWorkerModule.CustomSerializableStreamCodec</value>
  </property>

</configuration>

